@page
@model LoginModel

<head>
    <link href="~/css/login.css" rel="stylesheet" type="text/css">
</head>

<body>
    <main>
        <section id="login-area">
            <div class="container">
                <div class="login-card col-6 offset-3">
                    <h2>Efetuar Login</h2>
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div>
                            <input type="text" class="mb-4" asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="Email de Utilizador" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div>
                            <input type="password" class="mb-4" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div>
                            <button id="login-submit" type="submit" >Log in</button>
                        </div>
                        <div>
                            <p>
                                Ainda não se registou? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Clique aqui</a>
                            </p>
                            <p>
                                Esqueceu a sua password? <a id="forgot-password" asp-page="./ForgotPassword">Clique aqui</a>
                            </p>
                            
                            <p>
                                Reenviar o email de confirmação? <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Clique aqui</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
</body>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
