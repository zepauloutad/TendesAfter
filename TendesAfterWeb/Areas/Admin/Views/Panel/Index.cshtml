@using TendesAfter.Utility;
<style>
    h2 {
        color: #CCC;
        font-weight: bold;
        margin-bottom: 30px;
    }

    .painel-card {
        height: 250px;
        width: 250px;
        background-color: #171A3C;
        display: flex;
        flex-direction: column;
        border-radius: 12px;
    }

    .painel-card-top {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 175px;
    }

        .painel-card-top img {
            width: 50%;
            height: auto%;
        }

    .painel-card-bottom a {
        text-align: center;
        font-weight: 600;
        font-size: 1.5rem;
        display: block;
    }

        .painel-card-bottom a:hover {
            color: #F44D10;
        }
</style>

<div class="container" style="margin-top: 150px; margin-bottom: 150px;">
    <h2>Painel de Administração</h2>
    <div class="row mt-3">
        @if (User.IsInRole(SD.Role_Admin))
        {
            <div class="col-3">
                <div class="painel-card">
                    <div class="painel-card-top">
                        <img src="/Images/users.png" alt="Utilizadores" />
                    </div>
                    <div class="painel-card-bottom">
                        <a id="categorias" asp-area="Identity" asp-page="/Account/Register">Criar Utilizadores</a>
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole(SD.Role_Employee) || User.IsInRole(SD.Role_Admin))
        {
            <div class="col-3">
                <div class="painel-card">
                    <div class="painel-card-top">
                        <img src="/Images/mushroom.png" alt="Videojogos" />
                    </div>
                    <div class="painel-card-bottom">
                        <a id="produtos" asp-area="Admin" asp-controller="Product">Gerir Videojogos</a>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole(SD.Role_Admin))
        {
            <div class="col-3">
                <div class="painel-card">
                    <div class="painel-card-top">
                        <img src="/Images/category.png" alt="Categorias" />
                    </div>
                    <div class="painel-card-bottom">
                        <a id="categorias" asp-area="Admin" asp-controller="Category">Gerir Categorias</a>
                    </div>
                </div>
            </div>
        }
        @if (User.IsInRole(SD.Role_Admin))
        {
            <div class="col-3">
                <div class="painel-card">
                    <div class="painel-card-top">
                        <img src="/Images/console.png" alt="Consolas" />
                    </div>
                    <div class="painel-card-bottom">
                        <a id="consolas" asp-area="Admin" asp-controller="CoverType">Gerir Plataformas</a>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row mt-5">
        @if (User.IsInRole(SD.Role_Admin))
        {
            <div class="col-3">
                <div class="painel-card">
                    <div class="painel-card-top">
                        <img src="/Images/producer.png" alt="Produtoras" />
                    </div>
                    <div class="painel-card-bottom">
                        <a id="consolas" asp-area="Admin" asp-controller="Producer">Gerir Produtoras</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>